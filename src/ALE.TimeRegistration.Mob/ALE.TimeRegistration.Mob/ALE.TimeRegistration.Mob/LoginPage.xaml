<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ALE.TimeRegistration.Mob.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="TimeRegistration app"
                Padding="20" TextColor="Black" FontSize="32"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Login" Padding="40" HorizontalOptions="CenterAndExpand"
                   FontSize="32" TextColor="Black" ></Label>
            <Button Text="Login with fingerprint"></Button>
            <Button Text="Login with username and password"></Button>
            <Editor Placeholder="Username"></Editor>
            <Editor Placeholder="Password"></Editor>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>